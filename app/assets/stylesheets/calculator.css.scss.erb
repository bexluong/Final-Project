@font-face {
    font-family: "ostrich";
    src: url('<%= asset_path("ostrich-sans-regular.eot#iefix") %>') format('embedded-opentype'),
    url('<%= asset_path("fonts/ostrich-sans-regular.woff")%>') format('woff'),
    url('<%= asset_path("ostrich-sans-regular.ttf") %>') format('truetype');
}
@font-face {
    font-family: "ostrichBold";
    src: url('<%= asset_path("ostrich-sans-bold.eot#iefix") %>') format('embedded-opentype'),
    url('<%= asset_path("fonts/ostrich-sans-bold.woff")%>') format('woff'),
    url('<%= asset_path("ostrich-sans-bold.ttf") %>') format('truetype');
}
@font-face {
